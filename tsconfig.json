{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2022"],
        "module": "es2022",
        "rootDir": "./",
        "moduleResolution": "node",
        "outDir": "./dist",
        "removeComments": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["mocha", "chai", "node"],
    },
    "include": ["./tests/**/*.ts",
                "./server/src/**/*.ts",
                "./server/src/**/**/.d.ts",],
}
